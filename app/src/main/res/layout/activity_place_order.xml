<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaceOrderActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Order"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/josefinsanssemibold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/customerName"
        android:layout_width="345dp"
        android:layout_height="55dp"
        android:background="@drawable/custom_edit_text"
        android:hint="Customer Name"
        android:textColorHint="@color/black"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/customerAddress"
        android:layout_width="345dp"
        android:layout_height="150dp"
        android:background="@drawable/custom_edit_text"
        android:hint="Address"
        android:textColorHint="@color/black"
        android:inputType="textMultiLine"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/customerName"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/customerPincode"
        android:layout_width="345dp"
        android:layout_height="55dp"
        android:background="@drawable/custom_edit_text"
        android:hint="Pincode"
        android:textColorHint="@color/black"
        android:inputType="number"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/customerAddress"
        android:layout_marginTop="20dp"
        android:maxLength="6"/>

    <EditText
        android:id="@+id/customerMobile"
        android:layout_width="345dp"
        android:layout_height="55dp"
        android:background="@drawable/custom_edit_text"
        android:hint="Customer Mobile No."
        android:textColorHint="@color/black"
        android:inputType="number"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/customerPincode"
        android:layout_marginTop="20dp"
        android:maxLength="10"/>

    <EditText
        android:id="@+id/customerEmail"
        android:layout_width="345dp"
        android:layout_height="55dp"
        android:background="@drawable/custom_edit_text"
        android:hint="Customer Email ID"
        android:textColorHint="@color/black"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/customerMobile"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/cancel"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:text="Cancel"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/josefinsanssemibold"
        android:backgroundTint="@color/red"
        android:layout_below="@id/customerEmail"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/placeOrder"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:text="Place Order"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/josefinsanssemibold"
        android:backgroundTint="@color/yellow"
        android:layout_below="@id/customerEmail"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"/>

